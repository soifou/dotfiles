function docker_stop() {
    cd $DEVELOPMENT_PATH/docker
    docker-compose stop
    docker-machine stop dev-nfs
    source ~/.zshrc
}
# Run commands inside docker containers to keep your OS untouched using alias
function docker_alias() {
    docker run -it --rm \
        # -w="": Working directory inside the container
        -v $(pwd):$1 -w $1 \
        ${@:2}
}
function gitcheck() {
    docker run --rm \
        -v `pwd`:/files:ro \
        badele/alpine-gitcheck
}
function composer() {
    docker run --rm -it \
        -v $(pwd):/usr/src/app \
        -v ~/.composer:/home/composer/.composer \
        -v ~/.ssh/id_rsa:/home/composer/.ssh/id_rsa:ro \
        --net=docker_default \
        graze/composer ${@:1}
}
function php7cc() {
    docker run -it --rm \
        -v $(pwd):/app \
        ypereirareis/php7cc $1
}
function symfony() {
    docker run -it --rm \
        -u $(id -u):$(id -g) \
        -v $(pwd):/app \
        ypereirareis/symfony-installer ${@:1}
}
function wp() {
    docker run -it --rm \
        -v $(pwd):/mnt \
        --net=docker_default \
        mbodenhamer/alpine-wpcli wp --path=/mnt ${@:1}
}