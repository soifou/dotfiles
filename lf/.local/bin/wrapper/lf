#!/usr/bin/env sh

set -e

# export OPENER="$XDG_CONFIG_HOME"/lf/open
export OPENER=linkhandler

# See: https://github.com/gokcehan/lf/wiki/Icons
# To match icons from exa, see: https://github.com/mtoohey31/lf-exa-icons
[ -f "$XDG_CONFIG_HOME"/lf/icons ] && {
    LF_ICONS="$(sed "$XDG_CONFIG_HOME"/lf/icons \
        -e '/^[ \t]*#/d'       \
        -e '/^[ \t]*$/d'       \
        -e 's/[ \t]\+/=/g'     \
        -e 's/$/ /' | tr '\n' :
    )"
    export LF_ICONS
}

if [ -n "$DISPLAY" ]; then
    export FIFO_UEBERZUG="${TMPDIR:-/tmp}/lf-ueberzug-$$"

    cleanup() {
        exec 3>&-
        rm "$FIFO_UEBERZUG"
    }

    mkfifo "$FIFO_UEBERZUG"
    ueberzug layer -s <"$FIFO_UEBERZUG" &
    exec 3>"$FIFO_UEBERZUG"
    trap cleanup EXIT

    mkdir -p "$XDG_CACHE_HOME/lf"

    # Ueberzug does not work with daemonized terminal.
    # hence kitty should be run without --single-instance
    "$GOPATH"/bin/lf "$@" 3>&-
else
    exec "$GOPATH"/bin/lf "$@"
fi
