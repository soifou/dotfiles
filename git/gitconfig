[user]
	name = [[GIT_NAME]]
	email = [[GIT_EMAIL]]
[color]
    ui = always
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    conflictstyle = diff3
[push]
    default = current
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
    ignored = !git ls-files -v | grep "^[[:lower:]]"
    countcommits = shortlog -sn
    blc = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) - %(color:red)%(objectname:short)%(color:reset) - %(color:yellow)%(refname:short)%(color:reset) - (%(color:green)%(committerdate:relative)%(color:reset)) - %(authorname) - %(contents:subject)'
[core]
    excludesfile = ~/.gitignore
    pager = diff-so-fancy | less --tabs=4 -RFX
[pager]
    status = true
