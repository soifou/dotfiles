[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
primary = ${xrdb:color4}
secondary = ${xrdb:color12}
alert = ${xrdb:color1}
color0 = ${xrdb:color0}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}
color8 = ${xrdb:color8}
color9 = ${xrdb:color9}
color10 = ${xrdb:color10}
color11 = ${xrdb:color11}
color12 = ${xrdb:color12}
color13 = ${xrdb:color13}
color14 = ${xrdb:color14}
color15 = ${xrdb:color15}

[bar/dark]
monitor = ${env:MONITOR:}
bottom = false
width = 100%
height = 25
offset-x = 0
offset-y = 0
fixed-center = true

;tray-position = right
;tray-detached = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.color5}

underline-size = 0
underline-color = ${colors.foreground}

border-size = 0
border-bottom-size = 1
border-color = ${colors.color5}

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 2

font-0 = "FontAwesome:size=10:antialias=true;0"
font-1 = "FuraCode Nerd Font:pixelsize=9:antialias=true;1"

modules-left = i3
modules-center = mpd
modules-right = redshift volume openweathermap date hour

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 0

[module/i3]
type = internal/i3
pin-workspaces = false
index-sort = true
ws-icon-default = ÔÑë

format = <label-state> <label-mode>
format-spacing = 0

label-focused = %icon%
label-focused-padding = 1
label-focused-foreground = ${colors.color7}

label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.color2}

label-urgent = %icon%
label-urgent-padding = 1
label-urgent-foreground = ${colors.color1}

label-visible = %icon%
label-visible-padding = 1
label-visible-foreground = ${colors.color4}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
password =
interval = 2

icon-play = ÔÅã
icon-pause = ÔÅå
icon-stop = ÔÅç
icon-prev = ÔÅâ
icon-next = ÔÅê
icon-random = ÔÅ¥

label-song = %title% (%artist%)
label-song-maxlen = 50
label-song-ellipsis = true

format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <icon-random> ~ <label-song>

[module/hour]
type = internal/date
interval = 5
time = %H:%M
label = %time%
;label = %{B#637C8A F#fff} %time% %{B- F-}

[module/date]
type = internal/date
interval = 10.0
date = %d/%m/%Y
label = %date%

[module/volume]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = "ÔÄ®  "
label-volume-foreground = ${root.foreground}

format-muted-prefix = "ÔÄ¶  "
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.primary}
bar-volume-foreground-1 = ${colors.primary}
bar-volume-foreground-2 = ${colors.primary}
bar-volume-foreground-3 = ${colors.primary}
bar-volume-foreground-4 = ${colors.primary}
bar-volume-foreground-5 = ${colors.secondary}
bar-volume-foreground-6 = ${colors.secondary}
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.color8}

[module/backlight]
type = internal/xbacklight
output = ${env:MONITOR:VGA-0}

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ‚îÄ
bar-empty = ‚îÄ


[module/openweathermap]
type = custom/script
interval = 30
exec = ~/.bin/openweathermap -i

[module/redshift]
type = custom/script
interval = 60
exec = ~/.config/polybar/modules/redshift.sh
;click-left = ~/.local/bin/red.sh

[module/cmus]
type = custom/script
exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/mpv]
type = custom/script
exec = sh ~/.config/polybar/mpv.sh
exec-if = pgrep -x mpv
interval = 1
format = <label>
label = %output%

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = ÔÄë
label-open-foreground = ${colors.color1}
label-close = ÔÄç
label-close-foreground = ${colors.color1}
label-separator = " "
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

