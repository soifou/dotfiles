#!/usr/bin/env sh

# Emulate i3 scratchpad with xdotool
xdotool search --onlyvisible --classname "$1" windowunmap \
    || ( xdotool search --classname "$1" windowmap; xdotool search --classname "$1" windowraise; ) \
    || ( $TERMINAL --class="$1" "$2"; xdotool search --classname "$1" windowraise; )
