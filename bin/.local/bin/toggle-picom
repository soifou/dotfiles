#!/usr/bin/env sh

if ! command -v picom > /dev/null 2>&1; then
    echo Missing picom, please install first.
    exit 1
fi

case "$1" in
    -t)
       if pgrep -x picom > /dev/null 2>&1; then
            pkill -9 picom
            echo 
        else
            picom -b
            echo 
        fi
        ;;
    *)
        [ "$(pgrep -x picom)" ] && echo  || echo 
        ;;
esac
