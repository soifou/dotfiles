# Reference: https://github.com/arybczak/ncmpcpp/blob/master/doc/bindings

def_key "+"
    show_clock
def_key "="
    volume_up

def_key "d"
    delete_playlist_items

def_key "]"
    next
def_key "["
    previous

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "f"
  seek_forward
def_key "b"
  seek_backward

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

# Scrobble
def_key ";"
    run_external_command "~/.local/bin/scrobbler --toggle"
def_key ":"
    run_external_command "~/.local/bin/scrobbler --love"

def_key "h"
    previous_column
def_key "l"
    next_column

def_key "."
    show_lyrics

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "J"
    move_selected_items_down
def_key "K"
    move_selected_items_up

def_key "g"
    move_home
def_key "G"
    move_end
