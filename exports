if [[ `uname` == "Darwin" ]]; then
    # homebrew path
    export PATH="/usr/local/sbin:$PATH"
    # powerlevel9k : Only print user@hostname when not normal user
    export DEFAULT_USER=soifou
    # set my development path
    export DEVELOPMENT_PATH="/Users/$DEFAULT_USER/Development"
    # use brewed coreutils instead of default one
    export COREUTILS_ROOT="$(brew --prefix coreutils)/libexec"
    if [ -d "${COREUTILS_ROOT}" ]; then
        export PATH="${COREUTILS_ROOT}/gnubin:$PATH"
    fi

elif [[ `uname` == "Linux" ]]; then
    # powerlevel9k : Only print user@hostname when not normal user
    export DEFAULT_USER=soifou
    # set my development path
    export DEVELOPMENT_PATH="/media/midgar/dev"
    # Support more than 256 colors
    export TERM="xterm-256color"
    # add Rbenv
    export RBENV_ROOT="$HOME/.rbenv"
    if [ -d "${RBENV_ROOT}" ]; then
        export PATH="${RBENV_ROOT}/bin:$PATH"
        eval "$(rbenv init -)"
    fi
    # add Pyenv
    export PYENV_ROOT="$HOME/.pyenv"
    if [ -d "${PYENV_ROOT}" ]; then
        export PATH="$PYENV_ROOT/bin:$PATH"
        eval "$(pyenv init -)"
    fi
fi

# Set EDITOR to /usr/bin/vim if Vim is installed
if [ -f /usr/bin/vim ]; then
  export EDITOR=/usr/bin/vim
fi