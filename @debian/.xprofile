#!/bin/sh

# adjust keyboard delay/rate, turn of beep
command -v xset >/dev/null 2>&1 && xset r rate 300 40 && xset -b

# enable keyboard numlock
command -v numlockx >/dev/null 2>&1 && numlockx on

# set custom keymap
command -v setxkbmap >/dev/null 2>&1 && setxkbmap -layout fr -variant latin9 -option ctrl:nocaps,terminate:ctrl_alt_bksp

# set wallpaper
command -v wal >/dev/null 2>&1 && wal -q -i "$WALLPAPER_PATH/today" > /dev/null

# adjust temp/brightness
command -v redshift >/dev/null 2>&1 && ~/.bin/brightness 1

# compositor for x11
command -v compton >/dev/null 2>&1 && compton --daemon

# rofi clipboard manager
command -v greenclip >/dev/null 2>&1 && greenclip daemon &

# music player daemon
if command -v mpd >/dev/null; then
    # [ ! -s ~/.config/mpd/mdp.pid ] && mpd &
    pgrep mpd > /dev/null || mpd &
fi

# hide mouse cursor when inactive
if command -v unclutter >/dev/null; then
    pgrep unclutter > /dev/null || unclutter &
fi

# notifier
command -v dunst >/dev/null 2>&1 && dunst -c ~/.cache/wal/colors-dunstrc &

# screen locker
command -v locker >/dev/null 2>&1 && locker &

