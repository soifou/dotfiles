#!/usr/bin/env sh

# Manage window gaps for BSPWM

_="bspc config window_gap"
BSPWM_GAPS=${BSPWM_GAPS:-10}

case "$1" in
    equal) "$($_ $BSPWM_GAPS)" ;;
    toggle) [ $($_) = '0' ] && $_ $BSPWM_GAPS || $_ 0 ;;
    plus) "$($_ $(($($_) + 2)))" ;;
    minus) [ $($_) -ne 0 ] && "$($_ $(($($_) - 2)))" ;;
esac
