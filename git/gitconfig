[user]
	name = [[GIT_NAME]]
	email = [[GIT_EMAIL]]
[color]
	diff = auto
	status = auto
	branch = auto
[merge]
    conflictstyle = diff3
[push]
	default = current
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
    ignored = !git ls-files -v | grep "^[[:lower:]]"
    changedfiles = "!git diff --name-only master `git rev-parse --abbrev-ref HEAD`"
    countcommits = shortlog -sn
[core]
	excludesfile = ~/.gitignore
