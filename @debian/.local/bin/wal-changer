#!/usr/bin/env sh

reload_wallpaper() {
    echo "wal start..."
    # based on what is set as my wallpaper, this could either be a still picture
    # or a cinemagraph. Find out what it is, and launch with the appropriate program.
    WALL="$(cat "$XDG_CACHE_HOME/wal/wal")"
    MIMETYPE=$(file --mime-type -L "$WALL" | tr -d ' ' | awk -F: '{print $2}')
    case "$MIMETYPE" in
    *png* | *jpg* | *jpeg*)
        pkill -9 xwinwrap
        feh --no-fehbg --bg-fill "$WALL" &
        ;;
    *gif* | *webm* | *mp4* | *mkv*) mpvbg "$WALL" &;;
    esac
    echo "wal end..."
}

reload_dunst() {
    echo "dunst start"
    pkill dunst
    dunst -config "$XDG_CACHE_HOME/wal/colors-dunstrc" &
    echo "dunst end"
}

reload_lemonbar() {
    if pgrep -x lemonbar >/dev/null; then
        pkill lemonbar
        sh "$XDG_CONFIG_HOME"/lemonbar/run &
    fi
}

reload_sublime() {
    echo "sublime start"
    # Reload adaptive theme
    python "$XDG_CONFIG_HOME"/wal/generator/sublime.py
    echo "sublime end"
}

reload_kitty() {
    echo "kitty start"
    # Reload +kitten diff
    ruby "$XDG_CONFIG_HOME"/wal/generator/kitty.rb
    # Reload running instances
    for i in $(kitty @ --to=unix:"$KITTY_SOCK" ls | jq ".[].id"); do
        kitty @ --to=unix:"$KITTY_SOCK" set-colors -a -c --match id:$i "$XDG_CACHE_HOME"/wal/colors-kitty.conf
    done
    echo "kitty end"
}

reload_mpv() {
    echo "mpv start"
    # Reload custom progress bar (https://github.com/torque/mpv-progressbar)
    . "$XDG_CACHE_HOME"/wal/colors.sh

    echo "default-style=\\\fnmonospace\\\b1\\\bord0\\\shad0\\\fs20\\\c&H$(rgb_to_brg $color2)&\\\3c&H$(rgb_to_brg $color4)&
bar-height-inactive=8
bar-height-active=18
bar-default-style=\\\bord0\\\shad0
bar-foreground-style=
bar-cache-style=\\\c&H$(rgb_to_brg $color2)&
bar-background-style=\\\c&H$(rgb_to_brg $color2)&\\\alpha&HFF&
pause-indicator-foreground-style=\\\c&H$(rgb_to_brg $foreground)&
pause-indicator-background-style=\\\c&H$(rgb_to_brg $background)&" > "$XDG_CONFIG_HOME"/mpv/script-opts/torque-progressbar/main.conf
    echo "mpv end"
}
rgb_to_brg() {
    r="$(echo $1 | cut -c 2-3)"
    g="$(echo $1 | cut -c 4-5)"
    b="$(echo $1 | cut -c 6-7)"
    echo "$b$g$r"
}

reload_pywalfox() {
    echo "pywalfox start"
    # Reload pywalfox extension (https://github.com/Frewacom/Pywalfox)
    [ "$(pgrep -cf pywalfox)" = "1" ] && python "$HOME/Development/testing/Pywalfox/daemon/pywalfox.py" update
    echo "pywalfox end"
}

reload_wal
reload_sublime
reload_kitty
reload_pywalfox
reload_mpv
reload_dunst
