# add Rbenv
export RBENV_ROOT="$HOME/.rbenv"
if [ -d "${RBENV_ROOT}" ]; then
    export PATH="${RBENV_ROOT}/bin:$PATH"
    eval "$(rbenv init -)"
fi

if [[ `uname` == "Darwin" ]]; then
    # homebrew path
    export PATH="/usr/local/sbin:$PATH"
    # powerlevel9k : Only print user@hostname when not normal user
    export DEFAULT_USER=soifou
    # set my development path
    export DEVELOPMENT_PATH="/Users/$DEFAULT_USER/Development"
    # use brewed coreutils instead of default one
    export COREUTILS_ROOT="$(brew --prefix coreutils)/libexec"
    if [ -d "${COREUTILS_ROOT}" ]; then
        export PATH="${COREUTILS_ROOT}/gnubin:$PATH"
    fi
    # Docker toolbox for my dev environment
    source $HOME/dotfiles/docker/exports
    source $HOME/dotfiles/docker/functions
    if [[ `docker-machine status $DOCKER_MACHINE_NAME` == "Running" ]]; then
        source $HOME/dotfiles/docker/aliases
        eval $(docker-machine env $DOCKER_MACHINE_NAME)
    fi

elif [[ `uname` == "Linux" ]]; then
    # powerlevel9k : Only print user@hostname when not normal user
    export DEFAULT_USER=soifou
    # set my development path
    export DEVELOPMENT_PATH="/media/midgar/dev"
    # Support more than 256 colors
    export TERM="xterm-256color"
    # add PHPBrew
    export PHPBREW_ROOT="$HOME/.phpbrew"
    if [ -d "${PHPBREW_ROOT}" ]; then
        export PHPBREW_SET_PROMPT=1
        export PHPBREW_RC_ENABLE=1
        source $PHPBREW_ROOT/bashrc
    fi
    # add Pyenv
    export PYENV_ROOT="$HOME/.pyenv"
    if [ -d "${PYENV_ROOT}" ]; then
        export PATH="$PYENV_ROOT/bin:$PATH"
        eval "$(pyenv init -)"
    fi
fi

# Set EDITOR to /usr/bin/vim if Vim is installed
if [ -f /usr/bin/vim ]; then
  export EDITOR=/usr/bin/vim
fi