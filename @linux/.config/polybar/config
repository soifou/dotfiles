[bar/dark]
monitor = ${env:MONITOR:}
bottom = false
width = 100%
height = 25
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.color5}

underline-size = 2
underline-color = ${colors.foreground}

border-size = 0
border-bottom-size = 0
border-color = ${colors.color0}

padding-left = 5
padding-right = 5

