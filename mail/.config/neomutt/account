set my_mbox = $XDG_CONFIG_HOME/neomutt/mailboxes
set realname = "Fran√ßois Fleur"
set mbox_type = Maildir

# Default account
source $my_mbox/gmail-perso/account

# Folder hooks, source in account configuration each time the mailbox
# subdirectory changes.
folder-hook perso/* source $my_mbox/gmail-perso/account
folder-hook pro/* source $my_mbox/gmail-pro/account

# Use F-keys to change between accounts:
macro index <f2> '<enter-command>source $my_mbox/gmail-perso/account<enter><change-folder>!<enter>'
macro index <f3> '<enter-command>source $my_mbox/gmail-pro/account<enter><change-folder>!<enter>'
