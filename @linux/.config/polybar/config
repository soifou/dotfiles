[colors]

;background = #aa000000
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color4}
;primary = ${xrdb:color4:#FFbf616a}
secondary = ${xrdb:color12}
alert = ${xrdb:color1}
;battery-charging = #00aaff
;battery-discharging = #ffaa00
;battery-full = #00ffaa

[bar/elegant]
monitor = ${env:MONITOR:DVI-I-1}
bottom = false
width = 100%
height = 25
offset-x = 0
offset-y = 0
;radius = 6.0
;fixed-center = false

;override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 2
;line-color = #f00

underline-size = 2
underline-color = ${colors.foreground}

;border-size = 20
border-size = 0
border-bottom-size = 1
;border-color = #f00

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 2

font-0 = MesloLGM Nerd Font:pixelsize=12
font-1 = FontAwesome:pixelsize=12

modules-left = i3
modules-center = xwindow
modules-right = redshift volume date openweathermap powermenu

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.foreground-alt}
label-focused-foreground = ${colors.background-alt}
label-focused-underline= ${colors.foreground-alt}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.background-alt}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name% %icon%
;label-focused-background = ${module/bspwm.label-focused-background}
;label-focused-foreground = ${module/bspwm.label-focused-foreground}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name% %icon%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name% %icon%
;label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name% %icon%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-foreground = ${module/bspwm.label-urgent-foreground}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

ws-icon-0 = 1;ÔÑ†
ws-icon-1 = 2;ÔÑ°
ws-icon-2 = 3;ÔÇ¨
ws-icon-3 = 4;ÔÇÜ
ws-icon-4 = 5;ÔÄ•
ws-icon-5 = 6;ÔÄæ
ws-icon-6 = 7;ÔÇÜ
ws-icon-default = ÔÑ†

