module-margin-right = 2

font-0 = FontAwesome:size=11;1
font-1 = MesloLGM Nerd Font:pixelsize=11;1

modules-left = i3
modules-center = xwindow
modules-right = redshift volume date powermenu


[module/xworkspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
pin-workspaces = true

icon-default = ÔÜí
format = " <label-state> "

label-active = %icon% %{O5}
label-active-foreground = ${colors.color1}
label-occupied = %icon% %{O5}
label-occupied-foreground = ${colors.color11}
label-urgent = %icon% %{O5}
label-urgent-foreground = ${colors.color6}
label-empty = %icon% %{O5}
label-empty-foreground = ${colors.color8}

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 0

[module/i3]
type = internal/i3
pin-workspaces = false
