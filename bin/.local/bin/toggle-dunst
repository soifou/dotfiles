#!/usr/bin/env sh

if ! command -v dunstctl > /dev/null 2>&1; then
    echo Missing dunsctl, please install first.
    exit 1
fi

case "$1" in
    -t)
        if [ "$(dunstctl is-paused)" = "false" ]; then
            dunstctl set-paused true
            echo 
        else
            dunstctl set-paused false
            echo 
        fi
        ;;
    *)
        [ "$(dunstctl is-paused)" = "false" ] && echo  || echo 
        ;;
esac
