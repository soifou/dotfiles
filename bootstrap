#     exit 0
# fi

# if [ "$NO_VIRTUALENVWRAPPER" != 1 ]; then
#     install_virtualenvwrapper
# fi
# if [ "$NO_BASH" != 1 ] || [ "$NO_ZSH" != 1 ]; then
#     configure_shell
# fi

if [ "$BASH" == 1 ]; then
    configure_bash
fi
if [ "$GIT" == 1 ]; then
    configure_git
fi
if [ "$SUBLIME" == 1 ]; then
    configure_sublime
fi
if [ "$VIM" == 1 ]; then
    configure_vim
fi
if [ "$ZSH" == 1 ]; then
    configure_zsh
fi
# if [ "$NO_I3" != 1 ]; then
#     configure_i3
# fi
# if [ "$NO_TMUX" != 1 ]; then
#     configure_tmux
# fi
# if [ "$NO_IPYTHON" != 1 ]; then
#     configure_ipython
# fi

