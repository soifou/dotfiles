#!/usr/bin/env sh

# Feed script a url or file location.
# If an image, it will view in sxiv,
# if a video or gif, it will view in mpv
# if a music file or pdf, it will download,
# otherwise it opens link in browser.

# If no url given. Exit.
[ -z "$1" ] && { exit; }

case "$1" in
*mailto:*)
    kitty --class=mailto neomutt $1
    ;;
*mkv | *webm | *mp4 | *youtube.com* | *youtu.be* | *gfycat.com* | *v.redd.it*)
    setsid mpv --input-ipc-server=/tmp/mpvsoc$(date +%s) -quiet "$1" >/dev/null 2>&1 &
    ;;
*png | *jpg | *jpe | *jpeg | *gif)
    # curl -sL "$1" > "/tmp/$(echo "$1" | sed "s/.*\///")" && sxiv -a "/tmp/$(echo "$1" | sed "s/.*\///")"  >/dev/null 2>&1 & ;;
    sxiv-web $1
    ;;
*mp3 | *flac | *opus | *mp3?source*)
    setsid tsp curl -LO "$1" >/dev/null 2>&1 &
    ;;
*)
    if [ -f "$1" ]; then
        "$TERMINAL" -e "$EDITOR $1"
    else
        setsid "$BROWSER" "$1" >/dev/null &

        # i3 marks assigned workspace as urgent and switch to it only the first time (?!).
        # Force i3 to focus everytime we open a new link tab.
        command -v i3-msg >/dev/null 2>&1 && i3-msg "[class=\"^(?i)$BROWSER$\"] focus" >/dev/null
    fi
    ;;
esac
